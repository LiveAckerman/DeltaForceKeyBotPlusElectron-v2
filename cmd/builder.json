{
  "productName": "DeltaForceKeyBotPlusElectron",
  "appId": "com.electron.ee",
  "copyright": "© 2025 duola Technology Co., Ltd.",
  "directories": {
    "output": "out"
  },
  "asar": true,
  // "asarUnpack": [
  //   "public/static", // 将 public/static 目录解压到 app.asar.unpacked
  //   "public/tessdata-lang" // 将 tessdata-lang 目录解压到 app.asar.unpacked
  // ],
  "files": [
    "**/*",
    "!cmd/",
    "!data/",
    "!electron/",
    "!frontend/",
    "!logs/",
    "!out/",
    "!go/",
    "!python/",
    "!bin/"
  ],
  "extraResources": {
    "from": "build/extraResources/",
    "to": "extraResources"
  },
  "nsis": {
    "oneClick": false,
    "allowElevation": true,
    "allowToChangeInstallationDirectory": true,
    "installerIcon": "build/icons/icon.ico",
    "uninstallerIcon": "build/icons/icon.ico",
    "installerHeaderIcon": "build/icons/icon.ico",
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "DeltaForceKeyBotPlusElectron"
  },
  "publish": [
    {
      "provider": "generic",
      "url": "https://github.com/wallace5303/electron-egg"
    }
  ],
  "win": {
    "icon": "build/icons/icon.ico",
    "artifactName": "${productName}-${os}-${version}-${arch}.${ext}",
    "target": [
      {
        "target": "nsis"
      }
    ]
  }
}